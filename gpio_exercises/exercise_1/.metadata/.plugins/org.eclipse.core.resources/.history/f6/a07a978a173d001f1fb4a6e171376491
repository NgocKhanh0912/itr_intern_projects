/* Includes ----------------------------------------------------------- */
#include "system/sys_manage.h"

/* Private defines ---------------------------------------------------- */
/* Private enumerate/structure ---------------------------------------- */
/* Private macros ----------------------------------------------------- */
/* Public variables --------------------------------------------------- */
/* Private variables -------------------------------------------------- */
/* Private function prototypes ---------------------------------------- */

/* Function definitions ----------------------------------------------- */
void sys_manage_led_fsm(input_event_t event) {
	static state_t current_state = STATE_IDLE;
	switch (current_state) {
	case (STATE_IDLE):
		switch (event) {
		case 0:
			current_state = STATE_IDLE;
			break;
		case 1:
			current_state = LED_1;
			break;
		case 2:
			current_state = STATE_2;
			break;
		case 3:
			current_state = STATE_3;
			break;
		default:
			current_state = STATE_IDLE;
			break;
		}
	case (STATE_1):
		switch (input) {
		case 0:
			current_state = STATE_IDLE;
			break;
		case 1:
			current_state = STATE_1;
			break;
		case 2:
			current_state = STATE_2;
			break;
		case 3:
			current_state = STATE_3;
			break;
		default:
			current_state = STATE_IDLE;
			break;
		}
	case (STATE_2):
		switch (input) {
		case 0:
			current_state = STATE_IDLE;
			break;
		case 1:
			current_state = STATE_1;
			break;
		case 2:
			current_state = STATE_2;
			break;
		case 3:
			current_state = STATE_3;
			break;
		default:
			current_state = STATE_IDLE;
			break;
		}
	case (STATE_3):
		switch (input) {
		case 0:
			current_state = STATE_IDLE;
			break;
		case 1:
			current_state = STATE_1;
			break;
		case 2:
			current_state = STATE_2;
			break;
		case 3:
			current_state = STATE_3;
			break;
		default:
			current_state = STATE_IDLE;
			break;
		}
	}

	switch (current_state) {
	case (STATE_IDLE):
		set_led_for_state_idle();
		break;
	case (STATE_1):
		set_led_for_state_1();
		break;
	case (STATE_2):
		set_led_for_state_2();
		break;
	case (STATE_3):
		set_led_for_state_3();
		break;
	}
}

/* End of file -------------------------------------------------------- */
